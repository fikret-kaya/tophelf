<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fkrt.tophelf.ProfileActivity"
    tools:showIn="@layout/activity_profile"
    android:background="#FFFFFF" >

    <SearchView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:queryHint="#search ..."
        android:id="@+id/searchbox"
        android:textColor="#2D96C4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_below="@id/searchbox"
        android:layout_height="2dip"
        android:background="#2D96C4" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchlist"
        android:clickable="true"
        android:layout_below="@+id/searchbox"
        android:visibility="invisible"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/inner0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchbox">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/inner">

            <ImageView
                android:src="@drawable/logo"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/image"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name Surname Zzz"
                android:id="@+id/name"
                android:textColor="#2D96C4"
                android:textSize="26dp"
                android:gravity="center"
                android:layout_alignTop="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:layout_toEndOf="@+id/image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Number of Friends : 114"
                android:id="@+id/friendsCount"
                android:textColor="#2D96C4"
                android:textSize="14dp"
                android:layout_below="@+id/name"
                android:layout_toRightOf="@+id/image"
                android:layout_toEndOf="@+id/image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="121 Votes"
                android:id="@+id/voteCounts"
                android:textColor="#2D96C4"
                android:textSize="14dp"
                android:layout_below="@+id/friendsCount"
                android:layout_toRightOf="@+id/image"
                android:layout_toEndOf="@+id/image" />

        </RelativeLayout>

        <View
            android:id="@+id/seperatorLine"
            android:layout_width="fill_parent"
            android:layout_below="@id/inner"
            android:layout_height="2dip"
            android:background="#2D96C4" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/votes"
            android:clickable="true"
            android:layout_below="@+id/seperatorLine"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>